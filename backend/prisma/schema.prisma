generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  CLIENT
  VENDOR
  PLANNER
  OPS_MANAGER
  FINANCE
  ADMIN
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  role      UserRole
  name      String?
  phone     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // ðŸ”‘ OPPOSITE RELATION FIELDS (REQUIRED)
  profile         UserProfile?
  weddings        Wedding[]    // weddings as couple
  plannerWeddings Wedding[]    @relation("PlannerWeddings") // weddings as planner
  vendor          Vendor?
  sessions        Session[]
  paidPayments    Payment[]    @relation("PayerPayments")  // payments made by this user
  receivedPayments Payment[]   @relation("PayeePayments") // payments received by this user
  assignedTasks   Task[]       // tasks assigned to this user
}

model Session {
  id           String   @id @default(uuid())
  userId       String
  refreshToken String
  userAgent    String?
  ipAddress    String?
  expiresAt    DateTime
  createdAt    DateTime @default(now())

  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([refreshToken])
}

enum VendorStatus {
  PENDING
  APPROVED
  REJECTED
}

enum WeddingStatus {
  LEAD
  BOOKED
  PLANNING
  EXECUTION
  COMPLETED
}

model Vendor {
  id           String       @id @default(uuid())
  userId       String       @unique
  businessName String
  status       VendorStatus @default(PENDING)
  createdAt    DateTime     @default(now())

  user         User         @relation(fields: [userId], references: [id])
  venues       Venue[]
  contracts    Contract[]
}

enum VenueStatus {
  DRAFT
  PENDING
  ACTIVE
  INACTIVE
}

model Venue {
  id           String      @id @default(uuid())
  vendorId     String
  name         String
  city         String
  state        String?
  address      String?
  capacity     Int
  basePrice    Int
  pricePerPlate Int?
  description  String?
  amenities    String[]
  images       String[]
  status       VenueStatus @default(PENDING)
  createdAt    DateTime    @default(now())

  vendor       Vendor              @relation(fields: [vendorId], references: [id])
  availability VenueAvailability[]
  bookings     Booking[]

  @@index([city, capacity])
}

model VenueAvailability {
  id        String   @id @default(uuid())
  venueId   String
  startDate DateTime
  endDate   DateTime
  createdAt DateTime @default(now())

  venue     Venue    @relation(fields: [venueId], references: [id])

  @@index([venueId, startDate, endDate])
}

model UserProfile {
  id       String  @id @default(uuid())
  userId   String  @unique
  fullName String
  phone    String?
  city     String?

  user User @relation(fields: [userId], references: [id])
}

model Wedding {
  id             String        @id @default(uuid())
  userId         String        // couple_id
  plannerId      String?       // assigned planner
  weddingDate    DateTime      // date
  location       String        @default("") // city or more detailed location
  guestCount     Int
  budget         Int           @default(0) // budgetEstimate -> budget
  status         WeddingStatus @default(LEAD)
  createdAt      DateTime      @default(now())

  user           User          @relation(fields: [userId], references: [id])
  planner        User?         @relation("PlannerWeddings", fields: [plannerId], references: [id])
  booking        Booking?
  tasks          Task[]
  timelines      Timeline[]
  payments       Payment[]
  contracts      Contract[]

  @@index([userId])
  @@index([plannerId])
  @@index([status])
}

enum BookingStatus {
  PENDING
  CONFIRMED
  CANCELLED
}

model Booking {
  id          String        @id @default(uuid())
  weddingId   String        @unique
  venueId     String
  weddingDate DateTime
  status      BookingStatus @default(PENDING)
  createdAt   DateTime      @default(now())

  wedding     Wedding       @relation(fields: [weddingId], references: [id])
  venue       Venue         @relation(fields: [venueId], references: [id])
  invoice     Invoice?

  // VenueAvailability handles date blocking; allow rebooking after cancellation
  @@index([venueId, weddingDate])
}

enum PaymentStatus {
  INITIATED
  SUCCESS
  FAILED
}

model Payment {
  id          String        @id @default(uuid())
  weddingId   String        // changed from bookingId
  amount      Int
  paidBy      String        // user id who paid
  paidTo      String        // user id who received
  provider    String
  providerRef String?
  status      PaymentStatus @default(INITIATED)
  createdAt   DateTime      @default(now())

  wedding     Wedding       @relation(fields: [weddingId], references: [id])
  payer       User          @relation("PayerPayments", fields: [paidBy], references: [id])
  payee       User          @relation("PayeePayments", fields: [paidTo], references: [id])
  refund      Refund?

  @@index([weddingId])
  @@index([paidBy])
  @@index([paidTo])
}

enum RefundStatus {
  INITIATED
  COMPLETED
  FAILED
}

model Refund {
  id        String       @id @default(uuid())
  paymentId String       @unique
  amount    Int
  status    RefundStatus @default(INITIATED)
  reason    String?
  createdAt DateTime     @default(now())

  payment   Payment      @relation(fields: [paymentId], references: [id])
}

model Invoice {
  id          String   @id @default(uuid())
  bookingId   String   @unique
  invoiceNo   String   @unique
  subtotal    Int
  gstAmount   Int
  totalAmount Int
  pdfUrl      String
  createdAt   DateTime @default(now())

  booking     Booking  @relation(fields: [bookingId], references: [id])
}

enum TaskStatus {
  TODO
  IN_PROGRESS
  DONE
}

enum TaskCategory {
  VENUE
  DECOR
  CATERING
  PHOTOGRAPHY
  MUSIC
  OTHER
}

model Task {
  id         String      @id @default(uuid())
  weddingId  String
  title      String
  category   TaskCategory
  assignedTo String?     // user id (planner or vendor)
  dueDate    DateTime?
  status     TaskStatus  @default(TODO)
  createdAt  DateTime    @default(now())

  wedding    Wedding     @relation(fields: [weddingId], references: [id])
  assignee   User?       @relation(fields: [assignedTo], references: [id])

  @@index([weddingId])
  @@index([assignedTo])
  @@index([status])
}

model Timeline {
  id         String   @id @default(uuid())
  weddingId  String
  milestone  String
  dueDate    DateTime
  createdAt  DateTime @default(now())

  wedding    Wedding  @relation(fields: [weddingId], references: [id])

  @@index([weddingId])
}

model Contract {
  id        String   @id @default(uuid())
  weddingId String
  vendorId  String
  terms     String
  signed    Boolean  @default(false)
  createdAt DateTime @default(now())

  wedding   Wedding  @relation(fields: [weddingId], references: [id])
  vendor    Vendor   @relation(fields: [vendorId], references: [id])

  @@index([weddingId])
  @@index([vendorId])
}

