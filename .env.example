# --- Core ---
PORT=3000
NODE_ENV=development

# --- Database (docker-compose default) ---
DATABASE_URL=postgresql://vivah:vivah@localhost:5432/vivah?schema=public

# --- Auth ---
JWT_SECRET=change-me
JWT_EXPIRES_IN=1d
REFRESH_TOKEN_EXPIRES_DAYS=30

# --- Email (SMTP) ---
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_USER=hello@example.com
EMAIL_PASS=change-me

# --- Payments (Razorpay) ---
RAZORPAY_KEY_ID=
RAZORPAY_KEY_SECRET=
RAZORPAY_WEBHOOK_SECRET=

# --- Robust stack add-ons ---
# Redis is used for background jobs/queueing.
REDIS_URL=redis://localhost:6379

# Meilisearch is used for fast venue/vendor search.
MEILISEARCH_HOST=http://localhost:7700
MEILISEARCH_API_KEY=dev-master-key

# --- Observability (Sentry) ---
SENTRY_DSN=
SENTRY_RELEASE=local-dev
SENTRY_TRACES_SAMPLE_RATE=0.1
SENTRY_PROFILES_SAMPLE_RATE=0.1
