generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  CLIENT
  VENDOR
  ADMIN
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  role      UserRole
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // ðŸ”‘ OPPOSITE RELATION FIELDS (REQUIRED)
  profile  UserProfile?
  weddings Wedding[]
  vendor   Vendor?
  sessions Session[]
}

model Session {
  id           String   @id @default(uuid())
  userId       String
  refreshToken String
  userAgent    String?
  ipAddress    String?
  expiresAt    DateTime
  createdAt    DateTime @default(now())

  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([refreshToken])
}

enum VendorStatus {
  PENDING
  APPROVED
  REJECTED
}

model Vendor {
  id           String       @id @default(uuid())
  userId       String       @unique
  businessName String
  status       VendorStatus @default(PENDING)
  createdAt    DateTime     @default(now())

  user         User         @relation(fields: [userId], references: [id])
  venues       Venue[]
}

model Venue {
  id           String   @id @default(uuid())
  vendorId     String
  name         String
  city         String
  state        String?
  address      String?
  capacity     Int
  basePrice    Int
  pricePerPlate Int?
  description  String?
  amenities    String[]
  images       String[]
  createdAt    DateTime @default(now())

  vendor       Vendor              @relation(fields: [vendorId], references: [id])
  availability VenueAvailability[]
  bookings     Booking[]

  @@index([city, capacity])
}

model VenueAvailability {
  id        String   @id @default(uuid())
  venueId   String
  startDate DateTime
  endDate   DateTime
  createdAt DateTime @default(now())

  venue     Venue    @relation(fields: [venueId], references: [id])

  @@index([venueId, startDate, endDate])
}

model UserProfile {
  id       String  @id @default(uuid())
  userId   String  @unique
  fullName String
  phone    String?
  city     String?

  user User @relation(fields: [userId], references: [id])
}

model Wedding {
  id             String   @id @default(uuid())
  userId         String
  weddingDate    DateTime
  city           String
  guestCount     Int
  budgetEstimate Int
  createdAt      DateTime @default(now())

  user           User     @relation(fields: [userId], references: [id])
  booking        Booking?
}

enum BookingStatus {
  PENDING
  CONFIRMED
  CANCELLED
}

model Booking {
  id          String        @id @default(uuid())
  weddingId   String        @unique
  venueId     String
  weddingDate DateTime
  status      BookingStatus @default(PENDING)
  createdAt   DateTime      @default(now())

  wedding     Wedding       @relation(fields: [weddingId], references: [id])
  venue       Venue         @relation(fields: [venueId], references: [id])
  payment     Payment?
  invoice     Invoice?

  // VenueAvailability handles date blocking; allow rebooking after cancellation
  @@index([venueId, weddingDate])
}

enum PaymentStatus {
  INITIATED
  SUCCESS
  FAILED
}

model Payment {
  id          String        @id @default(uuid())
  bookingId   String        @unique
  amount      Int
  provider    String
  providerRef String?
  status      PaymentStatus @default(INITIATED)
  createdAt   DateTime      @default(now())

  booking     Booking       @relation(fields: [bookingId], references: [id])
  refund      Refund?

  @@index([bookingId])
}

enum RefundStatus {
  INITIATED
  COMPLETED
  FAILED
}

model Refund {
  id        String       @id @default(uuid())
  paymentId String       @unique
  amount    Int
  status    RefundStatus @default(INITIATED)
  reason    String?
  createdAt DateTime     @default(now())

  payment   Payment      @relation(fields: [paymentId], references: [id])
}

model Invoice {
  id          String   @id @default(uuid())
  bookingId   String   @unique
  invoiceNo   String   @unique
  subtotal    Int
  gstAmount   Int
  totalAmount Int
  pdfUrl      String
  createdAt   DateTime @default(now())

  booking     Booking  @relation(fields: [bookingId], references: [id])
}

